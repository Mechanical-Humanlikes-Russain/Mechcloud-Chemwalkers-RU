<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base Class for all mechcloud surgeries that applies to the appropriate races -->
    <RecipeDef Name="ABF_surgeryMechcloudBase" Abstract="True">
        <effectWorking>Repair</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workSpeedStat>ABF_ArtificialOperationSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>16</workSkillLearnFactor>
        <anesthetize>false</anesthetize>
        <recipeUsers>
            <li>ABF_MechcloudChemwalker</li>
            <li>ABF_LumberingChemwalker</li>
        </recipeUsers>
    </RecipeDef>

	<!-- Surgery to terminate a mechcloud chemwalker -->
    <RecipeDef ParentName="ABF_surgeryMechcloudBase">
		<defName>ABF_ExpungeMechcloud</defName>
		<label>Expunge mechcloud</label>
		<description>Expunge the mechcloud inhabiting this shell to leave it inanimate.</description>
		<workerClass>ArtificialBeings.Recipe_Kill</workerClass>
		<jobString>Expunging mechcloud.</jobString>
		<workAmount>800</workAmount>
		<surgerySuccessChanceFactor>5</surgerySuccessChanceFactor>
		<hideBodyPartNames>true</hideBodyPartNames>
        <isViolation>true</isViolation>
		<targetsBodyPart>false</targetsBodyPart>
	</RecipeDef>

	<!-- Surgery to attune a mechcloud chemwalker that is unattuned -->
    <RecipeDef ParentName="ABF_surgeryMechcloudBase">
		<defName>ABF_AttuneMechcloud</defName>
		<label>Attune mechcloud</label>
		<description>Mechclouds that have no psychic connection or loyalty can be forcibly attuned to by a psychically gifted individual, taking command of it.</description>
		<workerClass>ArtificialBeings.Recipe_AttuneWildArmor</workerClass>
		<jobString>Attuning mechcloud.</jobString>
		<workAmount>800</workAmount>
		<hideBodyPartNames>true</hideBodyPartNames>
        <isViolation>false</isViolation>
		<targetsBodyPart>false</targetsBodyPart>
	</RecipeDef>

    <!-- Injecting chemfuel into a chemwalker -->
    <RecipeDef ParentName="ABF_surgeryMechcloudBase">
        <defName>ABF_ChemfuelInjection</defName>
        <label>inject chemfuel</label>
        <description>Manually replenish a chemwalker's chemfuel reserves.</description>
        <jobString>injecting chemfuel into TargetA.</jobString>
        <effectWorking>Repair</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workSpeedStat>ABF_ArtificialOperationSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>0</workSkillLearnFactor>
        <workAmount>200</workAmount>
        <hideBodyPartNames>true</hideBodyPartNames>
        <targetsBodyPart>false</targetsBodyPart>
        <anesthetize>false</anesthetize>
        <workerClass>ArtificialBeings.Recipe_SurgicallyFulfillArtificialNeed</workerClass>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </filter>
                <count>12</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Chemfuel</li>
            </thingDefs>
        </fixedIngredientFilter>
    </RecipeDef>

</Defs>